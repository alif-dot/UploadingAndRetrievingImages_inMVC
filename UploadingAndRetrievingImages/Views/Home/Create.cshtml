            @Html.ValidationMessageFor(model => model.standard, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.image_path, htmlAttributes: new { @class = "control-label col-md-2" })
